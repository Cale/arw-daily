<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9">
{% for post in collections.recentNews %}
  <url>
    <loc>https://daily.hamweekly.com{{ post.url | url }}</loc>
    <news:news>
      <news:publication>
        <news:name>Amateur Radio Daily</news:name>
        <news:language>en</news:language>
      </news:publication>
      <news:publication_date>{{ post.date | formatSitemapDate }}</news:publication_date>
      <news:title>{{ post.data.title }}</news:title>
    </news:news>
  </url>
{% endfor %}
</urlset>
