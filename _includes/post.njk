---
layout: shell.njk
---
      <article class="wrapper">
        <h1 class="full-bleed">{{ title }}</h1>
        <div class="main">
          <span class="post-date">{{ date | formatDate }}</span>
          {{ content | safe }}
          <p class="source">
            Source: <a href="{{ sourceurl | url }}">{{ source }}</a>&nbsp;<span class="material-symbols-outlined icon">open_in_new</span>
            {% for tag in tags | filterTagList %}
                {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
                <a class="tag" href="{{ tagUrl | url }}">{{ tag }}</a>
            {% endfor %}
          </p>
        </div>
        <div class="side">
          {% include 'sidebar-content.njk' %}
        </div>
      </article>
      <div class="ad">
        <section class="single-post-ad">
          <div>
            {% include 'aff-adsense.njk' %}
          </div>
        </section>
      </div>
      <section class="recent">
        <h3 class="section-header">Recent News</h3>
        {% include 'recent-news.njk' %}
      </section>
      <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "NewsArticle",
        "headline": "{{ title }}",
        "image": [
          "https://daily.hamweekly.com/images/amateur-radio-daily.png"
        ],
        "datePublished": "{{ date | formatISO8601Date }}",
        "dateModified": "{{ date | formatISO8601Date }}",
        "author": [{
            "@type": "Person",
            "name": "K4HCK Cale",
            "url": "https://daily.hamweekly.com/about/"
          }]
      }
      </script>